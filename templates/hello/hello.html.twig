{% extends './base.html.twig' %}
        {% block body %}
            {{ parent() }}
            <div>
                <h1><span style="color: black">Hello</span> {{ name[0] }}

                    <form class="form" method="post" action="{{ path('add_users_photo') }}">
                        <button title="Click to change Photo" type="submit"
                                style="cursor:pointer; background-color: white; border: none;">
                            <img class="userPhoto"
                                 src="{{ photoUrl[0] }}">
                        </button>
                    </form>
                </h1>

                <form class="form" method="post" action="{{ path('save_items') }}">
                    <input type="text" name="nameOfSkill" placeholder="Add new skills">
                    <button
                        class="btn btn btn-outline-success successButton"
                        title="Add todo"
                        type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="16">
                            <path
                                d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/>
                        </svg>
                    </button>
                </form>
                <h2>Todos:</h2>
                <section class="vh-100">
                    <div class="row d-flex justify-content-center h-100">
                        <div class="col col-lg-9 col-xl-7">
                            <div class="card rounded-3">
                                <div class="card-body p-4">
                                    <table class="table table-hover table mb-4">
                                        <thead>
                                        <tr>
                                            <th style="color: black" scope="col">No.</th>
                                            <th style="color: black" scope="col">Name</th>
                                            <th style="color: black" scope="col">Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for skill in skills %}
                                            <tr>
                                                <td>
                                                    {{ loop.index }}
                                                </td>
                                                <div class="form">
                                                    <td>
                                                        {{ skill }}
                                                    </td>
                                                    <td>
                                                        <form method="post" action="{{ path('delete_items') }}">
                                                            <input type="hidden" name="name" value="{{ skill }}">
                                                            <button title="Delete" class="btn btn-outline-danger delete"
                                                                    type="submit">
                                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                                     viewBox="0 0 16 16"
                                                                     width="16"
                                                                     height="16">
                                                                    <path
                                                                        d="M11 1.75V3h2.25a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1 0-1.5H5V1.75C5 .784 5.784 0 6.75 0h2.5C10.216 0 11 .784 11 1.75ZM4.496 6.675l.66 6.6a.25.25 0 0 0 .249.225h5.19a.25.25 0 0 0 .249-.225l.66-6.6a.75.75 0 0 1 1.492.149l-.66 6.6A1.748 1.748 0 0 1 10.595 15h-5.19a1.75 1.75 0 0 1-1.741-1.575l-.66-6.6a.75.75 0 1 1 1.492-.15ZM6.5 1.75V3h3V1.75a.25.25 0 0 0-.25-.25h-2.5a.25.25 0 0 0-.25.25Z"></path>
                                                                </svg>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </div>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        {% endblock %}
