{% extends './base.html.twig' %}
        {% block body %}
            <div>
                <div class="logout">
                    <form action="{{ path('log_out') }}" method="post">
                        <button
                            class="btn btn-outline-danger"
                            title="Logout"
                            type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="32" height="32">
                                <path d="M502.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-128-128c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224 192 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l210.7 0-73.4 73.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l128-128zM160 96c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 32C43 32 0 75 0 128L0 384c0 53 43 96 96 96l64 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l64 0z"/></svg>
                        </button>
                    </form>
                </div>
                <h1><span style="color: black">Hello</span> {{ name[0] }}</h1>
                <form class="form" method="post" action="{{ path('save_items') }}">
                    <input type="text" name="nameOfSkill" placeholder="Add new skills">
                    <button
                        class="btn btn btn-outline-success"
                        title="Add todo"
                        type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="16">
                            <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/>
                        </svg>
                    </button>
                </form>
                <h2>Todos:</h2>
                {% for skill in skills %}
                    <ul>
                        {% autoescape false %}
                            <form class="form" method="post" action="{{ path('delete_items') }}">
                                <li>
                                    {{ skill }}
                                </li>
                                <input type="hidden" name="name" value="{{ skill }}">
                                <button title="Delete" class="btn btn-outline-danger delete" type="submit">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                                        <path
                                            d="M11 1.75V3h2.25a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1 0-1.5H5V1.75C5 .784 5.784 0 6.75 0h2.5C10.216 0 11 .784 11 1.75ZM4.496 6.675l.66 6.6a.25.25 0 0 0 .249.225h5.19a.25.25 0 0 0 .249-.225l.66-6.6a.75.75 0 0 1 1.492.149l-.66 6.6A1.748 1.748 0 0 1 10.595 15h-5.19a1.75 1.75 0 0 1-1.741-1.575l-.66-6.6a.75.75 0 1 1 1.492-.15ZM6.5 1.75V3h3V1.75a.25.25 0 0 0-.25-.25h-2.5a.25.25 0 0 0-.25.25Z"></path>
                                    </svg>
                                </button>
                            </form>
                        {% endautoescape %}
                    </ul>
                {% endfor %}
            </div>
        {% endblock %}
