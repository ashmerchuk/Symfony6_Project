{% extends './base.html.twig' %}
        {% block body %}
            <div>
                <div class="logout">
                    <form action="{{ path('log_out') }}" method="post">
                        <button
                            class="btn btn-outline-danger"
                            title="Logout"
                            type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="32" height="32">
                                <path
                                    d="M502.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-128-128c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224 192 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l210.7 0-73.4 73.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l128-128zM160 96c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 32C43 32 0 75 0 128L0 384c0 53 43 96 96 96l64 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l64 0z"/>
                            </svg>
                        </button>
                    </form>
                </div>
                <h1><span style="color: black">Hello</span>
                    {{ name[0] }}
                    <form class="form" method="post" action="{{ path('add_users_photo') }}">
                        <button title="Click to change Photo" type="submit" style="cursor:pointer; background-color: white; border: none;">
                            <img class="userPhoto"
                                 src="{{ photoUrl[0] }}">
                        </button>
                    </form>
                </h1>
                <div class="form">
                <form  method="post" action="{{ path('add_url') }}">
                    <input type="text" name="photoUrl" placeholder="Add your url photo">
                    <button
                        class="btn btn-outline-primary"
                        title="Add Photo"
                        type="submit">
                        Submit
                    </button>
                </form>
                    <button class="btn btn-outline-danger" title="Back" onclick="window.location.href = '{{ path('list_items') }}'">
                        Back
                    </button>
                </div>
            </div>
        {% endblock body %}

