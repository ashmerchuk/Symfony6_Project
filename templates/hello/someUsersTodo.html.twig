{% extends './base.html.twig' %}
{% block body %}
    <div>
        <div class="logout">
            <form action="{{ path('table') }}" method="post">
                <button title="Go to table" class="btn btn-outline-primary" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="32" height="32">
                        <path d="M64 256V160H224v96H64zm0 64H224v96H64V320zm224 96V320H448v96H288zM448 256H288V160H448v96zM64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64z"/></svg>
                </button>
            </form>
        </div>
        <h3>Here is all todos from other user <span>{{ email }}</span></h3>
        <section class="vh-100">
            <div class="row d-flex justify-content-center h-100">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card rounded-3">
                        <div class="card-body p-4">
                            <table class="table table-hover table mb-4">
                                <thead>
                                <tr>
                                    <th style="color: black" scope="col">No.</th>
                                    <th style="color: black" scope="col">Name</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for skill in skills %}
                                    <tr>
                                        <td>
                                            {{ loop.index }}
                                        </td>
                                        <div class="form">
                                            <td>
                                                {{ skill }}
                                            </td>
                                        </div>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
