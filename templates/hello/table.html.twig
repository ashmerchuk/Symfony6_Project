<h1 style="color: rgb(239, 105, 66);">Hello Moebel</h1>
<h3>Todos from all users</h3>
<form action="{{ path('log_in') }}" method="get" style="float: right;">
    <button type="submit">Log in</button>
</form>
<table>
    <thead>
    <tr>
        <form method="post" action=" {{ path ('table') }}">
        <th style="color: rgb(239, 105, 66);">Name of Todo
            <input type="hidden" name="sortName" value="{{ sortName ? 0 : 1 }}">
            <button style="background-color: #28e153; color: #fff; border-radius: 8px;" type="submit">Sort</button>
        </th>
        </form>
        <form method="post" action=" {{ path ('table') }}">
        <th style="color: rgb(239, 105, 66);">Email
            <input type="hidden" name="sortEmail" value="{{ sortEmail ? 0 : 1 }}">
            <button style="background-color: #28e153;  color: #fff; border-radius: 8px;" type="submit">Sort</button>
        </th>
        </form>
        <th style="color: rgb(239, 105, 66);">Options</th>
    </tr>
    </thead>
    <tbody>
    {% for skill in skills %}
        <tr>
            <form method="post" action="{{ path('some_users_todo') }}">
            <input type="hidden" name="email" value="{{ skill.email }}">

            <td style="text-align: center;">{{ skill.nameOfTodo }}</td>
            <td style="text-align: center;">{{ skill.email }}  </td>
            <td><button type="submit"> See User </button></td>
            </form>
        </tr>


    {% endfor %}
    </tbody>
</table>

